using System;

namespace lab2
{
    class program
    {
        static void Main(string[] args)
        {
            //Размерность массива
            int n;
            Console.WriteLine("Введите размерность массива");
            //Ввод размерности
            n = Convert.ToInt32(Console.ReadLine());
            //Объявить одномерный массив 
            int[] array;
            Console.WriteLine("Тип ввода");
            Console.WriteLine("1 - автоматический, 2 - ручной \nСделайте выбор");
            //Позволяет выбирать тип ввода корректно
            while (true)
            {
                //Выбор действия
                string choice = Console.ReadLine();
                //Свитч для выбора
                switch (choice)
                {
                    //Если один, то вызови одну функцию
                    case "1":
                        array = AutoInput(n);
                        break;
                    //Если два, то вызови другую функцию
                    case "2":
                        array = ManualInput(n);
                        break;
                    //Во всех остальных случаях
                    default:
                        {
                            Console.WriteLine("Не верная команда");
                            //Перейти на следующий шаг
                            continue;
                        }
                }
                break;
            }
            //Объявили переменые для:
            //Индекс минимального числа
            int minIndex = 0;
            //Получили максимальное значение в инте
            int min = int.MaxValue;
            //Индекс максиального числа
            int maxIndex = 0;
            //Получили минимальное значение в инте
            int max = int.MinValue;
            //циклы во всех си-лайках одинаковые
            for (int i = 0; i < array.Length; i++)
            {
                //Если число больше макса 
                if (array[i] > max)
                {
                    //Число стало новым максом
                    max = array[i];
                    //Индекс максимального текущий
                    maxIndex = i;
                }
                //тоже самое, только наоборот
                if (array[i] < min)
                {
                    min = array[i];
                    minIndex = i;
                }
            }
            //Если индекс минимального больше максимального, то он правее
            //Значит максимум левее
            if (maxIndex < minIndex)
            {
                Console.WriteLine("Максимальное число левее минимального на " + (minIndex - maxIndex) + " позиций");
            }
            else
            {
                Console.WriteLine("Минимальное число левее максимального на " + (maxIndex - minIndex) + " позиций");
            }
            //Это нужно, чтобы консоль не закрылась
            Console.ReadKey();
        }
        //Создается функция для авто ввода
        //Передается размерность массива
         static int[] AutoInput(int n)
        {
            //Объявить и инициализировать массив на n элементов
            int[] array = new int[n];
            //Объявить переменую рандома, которая и генерить числа
            Random random = new Random();
            for (int i = 0; i < array.Length; i++)
            {
                //array[i] = сгенерь мне пж число от 0 до 100
                array[i] = random.Next(0, 100);
                //Выведи в строчку элемент массив и сделай табуляцию
                Console.Write(array[i] + "\t");
            }
            for (int i = 0; i < array.Length; i++)
            {
                for (int j = i + 1; j < array.Length; j++)
                {
                    if (array[i] == array[j])
                    {
                        array[j]++;
                    }
                }
            }
            Console.WriteLine();
            for (int i = 0; i < array.Length; i++)
            {
                //Выведи в строчку элемент массив и сделай табуляцию
                Console.Write(array[i] + "\t");
            }
            //Отступи строку
            Console.WriteLine();
            //Верни массив
            return array;
        }
        //Функция ручного ввода, требует размерность массива
        static int[] ManualInput(int n)
        {
            //Dывода массива без рандома
            int[] array = new int[n];
            Console.WriteLine("Введите элементы массива");
            string nums = Console.ReadLine();
            string[] num = nums.Split(' ');
            while (num.Length != n)
            {
                if (num.Length > n)
                {
                    Console.WriteLine("Вы ввели много чисел");
                }
                if (num.Length < n)
                {
                    Console.WriteLine("Вы ввели мало чисел");
                }
                Console.WriteLine("Введите элементы массива");
                nums = Console.ReadLine();
                num = nums.Split(' ');
            }
            for (int i = 0; i < array.Length; i++)
            {
                array[i] = Convert.ToInt32(num[i]);
            }
            return array;
        }
    }
}
